{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "listFiles": true,
    "removeComments": false,
    "noEmitHelpers": true,
    "outDir": "build"
  },
  "exclude": [
    "./demo",
    "./test",
    "./node_modules"
  ],
  "filesGlob": [
    "./ng2-fullpage.ts",
    "./components/**/*.ts",
    "./components/typings/**/*.d.ts",

    "./typings/index.d.ts",

    "!./node_modules/**"
  ],
  "awesomeTypescriptLoaderOptions": {
    "resolveGlobs": true,
    "forkChecker": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
