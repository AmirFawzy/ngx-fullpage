{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "listFiles": true,
    "removeComments": false,
    "noEmitHelpers": false,
    "outDir": "build",
    "noLib": false
  },
  "exclude": [
    "demo",
    "test",
    "node_modules"
  ],
  "filesGlob": [
    "./components/fullpage/**/*.ts",

    "!./node_modules/**",

    "./components/typings",
    "./typings/index.d.ts"

  ],
  "awesomeTypescriptLoaderOptions": {
    "resolveGlobs": true,
    "forkChecker": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
