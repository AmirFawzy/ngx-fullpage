{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "sources",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "paths": {
      "@fullpage/*": [
        "components/fullpage/*"
      ],
      "@demo/*": [
        "demo/*"
      ]
    }
  },
  "exclude": [
    "**/node_modules/*",
    "**/build/*",
    "sources/demo/**",
    "sources/test.ts",
    "*/**.spec.ts",
    "**/e2e/*"
  ]
}
